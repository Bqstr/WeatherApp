<?xml version="1.0" encoding="UTF-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearRowweekday"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" android:orientation="horizontal">
        <TextView android:ellipsize="end"
            android:id="@+id/txtWeekdayOne"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1pxv"
            android:layout_marginTop="@dimen/_4pxv"
            android:layout_weight="0.3" android:layout_width="0dp"
            android:singleLine="true" android:text="@string/lbl_tuesday"
            style="@style/txtRobotoregular20" tools:text="@string/lbl_tuesday"/>
        <LinearLayout android:id="@+id/linearRowbrightness"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_75pxh"
            android:layout_weight="0.7" android:layout_width="0dp" android:orientation="horizontal">
            <ImageView android:id="@+id/imageBrightnessOne"
                android:layout_height="@dimen/_30pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="@dimen/_30pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_brightness"
                tools:ignore="ContentDescription" tools:src="@drawable/img_brightness"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTenTwo"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_66pxh"
                android:layout_weight="0.32" android:layout_width="0dp"
                android:singleLine="true" android:text="@string/lbl_10"
                style="@style/txtRobotoregular24" tools:text="@string/lbl_10"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTenOne"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_1pxv"
                android:layout_marginStart="@dimen/_21pxh"
                android:layout_weight="0.32" android:layout_width="0dp"
                android:singleLine="true" android:text="@string/lbl_10"
                style="@style/txtRobotoregular24_1" tools:text="@string/lbl_10"/>
        </LinearLayout>
    </LinearLayout>
